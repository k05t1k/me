@using Microsoft.AspNetCore.Http
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = "Home Page";
    var user = HttpContextAccessor.HttpContext.User;
    var isAuthenticated = user.Identity.IsAuthenticated;
    var role = isAuthenticated ? user.FindFirst(ClaimTypes.Role)?.Value : null;
}

<div class="container">
    <div class="jumbotron text-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    @if (isAuthenticated)
                    {
                        <h1>Welcome, @role, to ElectroHub!</h1>
                    }
                    else
                    {
                        <h1>Welcome to ElectroHub!</h1>
                    }
                    <p>Discover the latest and greatest in electronics at ElectroHub. We offer a wide range of products, from smartphones and laptops to smart home devices and accessories. Our mission is to provide our customers with the best possible shopping experience, with fast and reliable shipping, excellent customer service, and a hassle-free return policy.</p>
                    <p><a class="btn btn-primary btn-lg" asp-area="" asp-controller="Products" asp-action="Index">Explore our products</a></p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5"></div>

    <div class="row">
        <div class="col-md-4">
            <h2>Smartphones</h2>
            <p>Discover the latest smartphones from top brands. From flagship models to budget-friendly options, we have a wide range of smartphones to choose from.</p>
            <p><a class="btn btn-default" asp-area="" asp-controller="Products" asp-action="Index">Shop now &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Laptops</h2>
            <p>Find the perfect laptop for your needs. Whether you're a student, a professional, or a gamer, we have laptops to suit your lifestyle and budget.</p>
            <p><a class="btn btn-default" asp-area="" asp-controller="Products" asp-action="Index">Shop now &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Accessories</h2>
            <p>Enhance your electronics experience with our range of accessories. From headphones and chargers to cases and screen protectors, we have everything you need.</p>
            <p><a class="btn btn-default" asp-area="" asp-controller="Products" asp-action="Index">Shop now &raquo;</a></p>
        </div>
    </div>
</div>
